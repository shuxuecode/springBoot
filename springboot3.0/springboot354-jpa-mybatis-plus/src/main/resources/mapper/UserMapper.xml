<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot354.demo.mapper.UserMapper">

    <resultMap id="r_m" type="com.springboot354.demo.entity.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="createdTime" column="created_at" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="test" resultMap="r_m" parameterType="com.springboot354.demo.entity.User">
        select * from t_user where username like CONCAT('%', #{username}, '%') and 1=1 limit 1
    </select>

